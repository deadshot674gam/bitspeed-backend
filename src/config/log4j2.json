{
    "appenders": {
        "dateFile": {
            "type": "file",
            "filename": "./logs/app.log",
            "layout": {
                "type": "pattern",
                "pattern": "%d{yyyy-MM-dd hh.mm.ss} %p %c.%M:%l %m"
            },
            "compress": true,
            "numBackups": 20,
            "keepFileExt": true,
            "maxLogSize": "100M"
        },
        "console": {
            "type": "console"
        }
    },
    "categories": {
        "default" : {
            "appenders": [
                "console"
            ],
            "level": "trace",
            "enableCallStack": true
        },
        "Main": {
            "appenders": [
                "console"
            ],
            "level": "trace",
            "enableCallStack": true
        }
    }
}